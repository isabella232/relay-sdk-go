        },
        "kind": {
          "type": "string",
          "enum": ["StepContainer"]
        },
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z][A-Za-z0-9_-]*$"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  ]
